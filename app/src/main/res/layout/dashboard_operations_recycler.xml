<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/dash_income_window"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#BE2D2D85"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/extra_recycler_color"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type_dash"
            android:text="Type:"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:drawableLeft="@drawable/type"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amount_dash"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="Amount:"
            android:gravity="center"
            android:drawableLeft="@drawable/amount"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note_dash"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="Note:"
            android:gravity="center"
            android:drawableLeft="@drawable/note"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_dash"
            android:text="20 октября 2020"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/date"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>