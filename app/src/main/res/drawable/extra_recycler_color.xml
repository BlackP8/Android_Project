<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#BE2D2D85"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item
        android:left="7dp"
        android:top="7dp"
        android:bottom="7dp"
        android:right="7dp">
        <shape>
            <gradient android:angle="-180.0"
                android:startColor="#1AB7FF"
                android:endColor="#8414D3"
                />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>